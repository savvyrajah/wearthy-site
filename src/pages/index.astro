		.hero-grid,
		.about-grid,
		.educators-grid {
			grid-template-columns: 1fr;
			gap: 50px;
		}

		.values-grid,
		.schools-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.credibility-stats {
			grid-template-columns: repeat(2, 1fr);
			gap: 40px;
		}

		.awards-row {
			grid-template-columns: 1fr;
		}

		.footer-grid {
			grid-template-columns: 1fr 1fr;
			gap: 40px;
		}
	}

	@media (max-width: 768px) {
		.main-nav {
			display: none;
		}

		.hero {
			padding: 60px 0;
		}

		.hero-title {
			font-size: 3rem;
		}

		.hero-subtitle {
			font-size: 1.2rem;
		}

