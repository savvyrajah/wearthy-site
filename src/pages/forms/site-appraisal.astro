		box-shadow: 0 4px 15px rgba(90, 74, 58, 0.1);
	}

	.value-icon {
		width: 28px;
		height: 28px;
		background: linear-gradient(135deg, #b8a690, #8b7765);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: bold;
		flex-shrink: 0;
		margin-top: 3px;
		font-size: 14px;
	}

	.value-text h3 {
		font-size: 1.2rem;
		color: #5a4a3a;
		margin-bottom: 8px;
		font-weight: 500;
		font-family: 'Georgia', serif;
	}

	.value-text p {
		color: #6b5b4b;
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.impact-stats {
		background: linear-gradient(135deg, #f4e6d7, #ede1d1);
		padding: 50px 40px;
		border-radius: 12px;
		margin: 40px 0;
		text-align: center;
		border: 1px solid rgba(180, 166, 144, 0.2);
	}

	.impact-title {
		font-size: 2rem;
		color: #5a4a3a;
		margin-bottom: 40px;
		font-weight: 400;
		font-family: 'Georgia', serif;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 40px;
		max-width: 800px;
		margin: 0 auto;
	}

	.stat-item {
		text-align: center;
	}

	.stat-number {
		font-size: 3.5rem;
		font-weight: 700;
		color: #8b7765;
		margin-bottom: 10px;
		font-family: 'Arial', sans-serif;
		line-height: 1;
	}

	.stat-label {
		font-size: 1.1rem;
		color: #5a4a3a;
		font-weight: 500;
		font-family: 'Georgia', serif;
	}

	.credibility {
		background: linear-gradient(135deg, #f4e6d7, #ede1d1);
		padding: 35px;
		border-radius: 8px;
		margin-bottom: 35px;
		border: 1px solid rgba(180, 166, 144, 0.2);
	}

	.credibility h3 {
		color: #5a4a3a;
		margin-bottom: 20px;
		font-size: 1.4rem;
		font-family: 'Georgia', serif;
		font-weight: 400;
	}

	.awards {
		display: grid;
		gap: 12px;
	}

	.award {
		display: flex;
		align-items: center;
		gap: 12px;
		font-size: 0.9rem;
		color: #6b5b4b;
	}

	.award-icon {
		width: 18px;
		height: 18px;
		background: linear-gradient(135deg, #c17817, #a66614);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 10px;
		flex-shrink: 0;
	}

	.budget-range {
		background: linear-gradient(135deg, #f4e6d7, #ede1d1);
		padding: 20px;
		border-radius: 8px;
		margin: 25px 0;
		text-align: center;
		border: 1px solid rgba(180, 166, 144, 0.2);
	}

	.budget-range .amount {
		font-size: 1.4rem;
		font-weight: 500;
		color: #5a4a3a;
		font-family: 'Georgia', serif;
		margin-bottom: 8px;
	}

	.budget-range .description {
		font-size: 0.9rem;
		color: #6b5b4b;
		line-height: 1.5;
	}

	.form-section {
		background: white;
		padding: 45px;
		border-radius: 12px;
		box-shadow: 0 10px 30px rgba(90, 74, 58, 0.12);
		position: sticky;
		top: 20px;
		border: 1px solid rgba(212, 196, 176, 0.3);
	}

	.form-title {
		font-size: 2rem;
		color: #5a4a3a;
		margin-bottom: 12px;
		font-weight: 400;
		font-family: 'Georgia', serif;
	}

	.form-subtitle {
		color: #6b5b4b;
		margin-bottom: 30px;
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.form-group {
		margin-bottom: 22px;
		border: none;
		padding: 0;
	}

	.form-group label {
		display: block;
		margin-bottom: 6px;
		font-weight: 500;
		color: #5a4a3a;
		font-size: 0.9rem;
	}

	.form-group input,
	.form-group select,
	.form-group textarea {
		width: 100%;
		padding: 14px 16px;
		border: 2px solid #e8dcc6;
		border-radius: 6px;
		font-size: 1rem;
		transition: all 0.3s ease;
		background: #faf9f7;
		color: #5a4a3a;
	}

	.form-group input:focus,
	.form-group select:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: #b8a690;
		background: white;
		box-shadow: 0 0 0 3px rgba(184, 166, 144, 0.1);
	}

	.form-group textarea {
		resize: vertical;
		min-height: 100px;
		font-family: inherit;
	}

	.priority-questions {
		background: linear-gradient(135deg, #fff8e7, #fdf4e3);
		padding: 25px;
		border-radius: 8px;
		margin-bottom: 25px;
		border-left: 4px solid #c17817;
		border-top: none;
		border-right: none;
		border-bottom: none;
	}

	.priority-questions legend {
		color: #8b5a00;
		margin-bottom: 18px;
		font-size: 1rem;
		font-family: 'Georgia', serif;
		font-weight: 500;
		padding: 0 5px;
	}

	.checkbox-group {
		display: grid;
		gap: 12px;
	}

	.checkbox-item {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.checkbox-item input[type="checkbox"] {
		width: auto;
		margin: 0;
	}

	.checkbox-item label {
		margin-bottom: 0;
		font-weight: normal;
		font-size: 0.9rem;
		color: #6b5b4b;
	}

