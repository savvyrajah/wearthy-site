	}

	.content-section {
		background: white;
		padding: 50px;
		border-radius: 12px;
		box-shadow: 0 8px 25px rgba(90, 74, 58, 0.08);
		border: 1px solid rgba(212, 196, 176, 0.3);
	}

	.section-title {
		font-size: 2.4rem;
		color: #5a4a3a;
		margin-bottom: 30px;
		font-weight: 400;
		font-family: 'Georgia', serif;
	}

	.value-props {
		display: grid;
		gap: 30px;
		margin-bottom: 45px;
	}

	.value-prop {
		display: flex;
		align-items: flex-start;
		gap: 20px;
		padding: 25px;
		background: #faf9f7;
		border-radius: 8px;
		border-left: 4px solid #b8a690;
