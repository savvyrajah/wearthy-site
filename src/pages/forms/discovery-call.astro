							<option value="facilities-manager">Facilities Manager</option>
							<option value="board-member">Board Member</option>
							<option value="p&c-member">P&C Committee Member</option>
							<option value="teacher">Teacher/Educator</option>
							<option value="other">Other</option>
						</select>
					</fieldset>

					<fieldset class="form-group">
						<label for="email">Email Address *</label>
						<input type="email" id="email" name="email" required>
					</fieldset>

					<fieldset class="form-group">
						<label for="phone">Phone Number *</label>
						<input type="tel" id="phone" name="phone" required>
					</fieldset>

					<fieldset class="form-group">
						<label for="serviceType">Type of Service *</label>
						<select id="serviceType" name="serviceType" required>
							<option value="">Select type</option>
							<option value="early-learning">Early Learning Centre</option>
							<option value="primary-school">Primary School</option>
							<option value="secondary-school">Secondary School</option>
							<option value="k-12">K-12 School</option>
							<option value="other">Other</option>
						</select>
					</fieldset>

					<fieldset class="form-group">
						<label for="studentCount">Number of Children/Students</label>
						<select id="studentCount" name="studentCount">
							<option value="">Select range</option>
							<option value="under-50">Under 50</option>
							<option value="50-100">50-100</option>
							<option value="100-300">100-300</option>
							<option value="300-500">300-500</option>
							<option value="over-500">Over 500</option>
						</select>
					</fieldset>

					<fieldset class="form-group">
						<label for="indicativeBudget">Indicative Budget Range (if known)</label>
						<select id="indicativeBudget" name="indicativeBudget">
							<option value="">Select budget range</option>
							<option value="under-50k">Under $50,000</option>
							<option value="50k-100k">$50,000 - $100,000</option>
							<option value="100k-250k">$100,000 - $250,000</option>
							<option value="250k-500k">$250,000 - $500,000</option>
							<option value="over-500k">Over $500,000</option>
							<option value="unsure">Not sure yet</option>
						</select>
					</fieldset>

					<fieldset class="form-group">
						<label for="ageGroup">Primary Age Group *</label>
						<select id="ageGroup" name="ageGroup" required>
							<option value="">Select age group</option>
							<option value="early-childhood">Early Childhood (0-5 years)</option>
							<option value="junior-primary">Junior Primary (5-8 years)</option>
							<option value="middle-primary">Middle Primary (8-10 years)</option>
							<option value="upper-primary">Upper Primary (10-12 years)</option>
							<option value="secondary">Secondary (12-18 years)</option>
							<option value="mixed">Mixed Ages</option>
						</select>
					</fieldset>

					<fieldset class="priority-questions">
						<div class="priority-heading">Your planning stage (optional):</div>
