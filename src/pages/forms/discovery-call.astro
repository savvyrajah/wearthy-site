	<script>
		document.getElementById('appraisalForm')?.addEventListener('submit', async function(e) {
			e.preventDefault();

			const form = this as HTMLFormElement;
			const submitButton = form.querySelector('.submit-btn') as HTMLButtonElement;
			const originalButtonText = submitButton.textContent;

			// Disable button and show loading state
			submitButton.disabled = true;
			submitButton.textContent = 'Submitting...';

			try {
				const formData = new FormData(form);

				// Convert FormData to JSON object
				const jsonData: Record<string, any> = {};
				const photoFiles: File[] = [];

				formData.forEach((value, key) => {
					// Collect photo files separately
					if (key === 'photos' && value instanceof File && value.size > 0) {
						photoFiles.push(value);
						return;
					}

					// Handle checkboxes (phase[])
					if (key.endsWith('[]')) {
						if (!jsonData[key]) {
							jsonData[key] = [];
						}
						jsonData[key].push(value);
					} else {
						jsonData[key] = value;
					}
				});

				// Convert photos to base64 if any were uploaded
				if (photoFiles.length > 0) {
					const photoPromises = photoFiles.map(file => {
						return new Promise<string>((resolve, reject) => {
							const reader = new FileReader();
							reader.onload = () => resolve(reader.result as string);
							reader.onerror = reject;
							reader.readAsDataURL(file);
						});
					});

					const photoBase64Array = await Promise.all(photoPromises);
					jsonData.photos = photoBase64Array;
				}

				// Submit to HubSpot API
				const response = await fetch('/api/hubspot/discovery-call', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify(jsonData)
				});

				const result = await response.json();

				if (result.success) {
					// Hide the form section
					const mainContent = document.querySelector('.main-content') as HTMLElement;
					if (mainContent) {
						mainContent.style.display = 'none';
					}

					// Show the calendar section
					const calendarSection = document.getElementById('calendarSection');
					if (calendarSection) {
						calendarSection.style.display = 'block';
						// Scroll to calendar
						calendarSection.scrollIntoView({ behavior: 'smooth' });
					}
				} else {
					alert('There was an error submitting your request. Please try again or contact us directly at hello@wearthy.co');
					submitButton.disabled = false;
					submitButton.textContent = originalButtonText;
				}
			} catch (error) {
				console.error('Form submission error:', error);
				alert('There was an error submitting your request. Please try again or contact us directly at hello@wearthy.co');
				submitButton.disabled = false;
				submitButton.textContent = originalButtonText;
			}
		});
	</script>
